@model PaginationVM<Tag>
@{
    int count = (Model.CurrentPage-1)*3;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tag Table</h4>
                        <a asp-controller="Tag" asp-action="Create" class="btn btn-success">Create Tag</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Product Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Tag tag in Model.Items)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @tag.Name
                                            </td>
                                            <td>
                                                @tag.ProductTags.Count
                                            </td>
                                            <td>
                                                <a asp-controller="Tag" asp-action="Update" asp-route-id="@tag.Id" class="btn btn-warning btn-info"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a asp-controller="Tag" asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-danger btn-info">
                                                    <i class="mdi mdi-delete-forever"></i>
                                                </a>
                                                <a asp-controller="Tag" asp-action="Details" asp-route-id="@tag.Id" class="btn btn-primary "><i class="mdi mdi-open-in-new"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item @(Model.CurrentPage<=1?"disabled":"")"><a class="page-link" asp-action="index" asp-controller="tag" asp-route-page="@(Model.CurrentPage-1)">Previous</a></li>
                                @for (int i = 0; i < Model.TotalPage; i++)
                                {
                                    <li class="page-item @(Model.CurrentPage-1==i?"disabled":"")"><a class="page-link" asp-action="index" asp-controller="tag" asp-route-page="@(i+1)">@(i + 1)</a></li>

                                }
                                <li class="page-item @(Model.TotalPage<=Model.CurrentPage?"disabled":"")"><a class="page-link" asp-action="index" asp-controller="tag" asp-route-page="@(Model.CurrentPage+1)">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>