@model List<Color>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category Table</h4>
                        <a asp-controller="Color" asp-action="Create" class="btn btn-success">Create Color</a>
                       
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Product Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                  @foreach (Color color in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @color.Name
                                            </td>
                                            <td>
                                               @color.ProductColors.Count
                                            </td>
                                            <td>
                                                <a class="btn btn-warning btn-info"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a class="btn btn-danger btn-info">
                                                    <i class="mdi mdi-delete-forever"></i>
                                                </a>
                                                <a class="btn btn-primary "><i class="mdi mdi-open-in-new"></i></a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>